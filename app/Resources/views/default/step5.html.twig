{% extends 'layout.html.twig' %}

{% block content %}
<div class="row">
    
    <div class="col-sm-3">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Step 5 - Results summary</h3>
            </div>

            <div class="panel-body">
                <div class="control-group">
                    <div class="controls">
                        <h5>Tests cases quantity: </h5>
                        <span>{{ testCases.quantity }}</span><br/>
                        <h5>Matrices quantity: </h5>
                        <span>{{ results|length }}</span><br/>
                    </div>
                </div>
            </div>
        </div>
    </div>
                        
    {% for matrix in results %}
    <div class="col-sm-3">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Matrix (1,1,1)...({{matrix.size}},{{matrix.size}},{{matrix.size}})</h3>
            </div>

            <div class="panel-body">
                <div class="control-group">
                    <div class="controls">
                        <h5>Results: </h5>
                        {% for output in matrix.results %}
                            <span>{{ output }}</span><br/>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>    
    {% endfor %}                    
</div>
                            
<form action="{{ path('step2') }}" method="post" id="form-step">
</form>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/step1.js') }}"></script>
{% endblock %}