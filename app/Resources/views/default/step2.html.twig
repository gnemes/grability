{% extends 'layout.html.twig' %}

{% block content %}
<div class="row">
    <div class="col-sm-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Step 2 - Select matrix size</h3>
            </div>
            <div class="panel-body">
                <div class="control-group">
                    <div class="controls" id="matrix-container">
                        <label for="matrixsize">Matrix size (N, N, N): </label>
                        <select id="matrix-size" name="matrix-size">
                        {% for i in 1..100 %}
                            <option value="{{ i }}">{{ i }}</option>
                        {% endfor %}
                        </select>
                    </div>
                </div>
            </div>

            <div class="panel-footer">
                <div class="form-actions">
                    <div>
                        <button type="button" 
                                id="matrix-add" 
                                class="btn btn-primary btn-lg btn-block">
                            <!-- Label will be put here with JS -->        
                        </button>
                    </div>
                </div>                        
            </div>
        </div>
    </div>
                            
    <div class="col-sm-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Matrix</h3>
            </div>

            <div class="panel-body">
                
                <ul class="list-group" id="matrix-list">
                </ul>
                
            </div>
            
            <div class="panel-footer">
                <div>
                    <button type="button" id="next-step" class="btn btn-primary btn-lg btn-block">Next step</button>
                </div>
            </div>
        </div>
    </div>                        
</div>
                            
<form action="{{ path('step3') }}" method="post" id="form-step">
</form>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    
    <script type="text/javascript">
        $(function() {
            var tc = new TestCases();
            tc.init("{{testCases | raw}}");
            
            initStep2(tc);
        });
        
        
        
    
    
    $( "#next-step" ).on( "click", function( event ) {
        submitMatrix();
    });
    
    
    
    function submitMatrix()
    {
        $( "#matrix-list li" ).each(function( index ) {
            $("#form-step2").append("<input type='hidden' name='matrixSizes[]' value=\""+$( this ).attr("size")+"\"/>");
        });
        
        $("#form-step2").submit();
    }
    </script>
    
    <script src="{{ asset('js/step2.js') }}"></script>
{% endblock %}