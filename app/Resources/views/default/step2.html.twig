{% extends 'layout.html.twig' %}

{% block content %}
<div class="row">
    <div class="col-sm-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Step 2 - Select matrix size</h3>
            </div>
            <div class="panel-body">
                <div class="control-group">
                    <div class="controls">
                        <label for="matrixsize">Matrix size (N, N, N): </label>
                        <select id="matrix-size" name="matrix-size">
                        {% for i in 1..100 %}
                            <option value="{{ i }}">{{ i }}</option>
                        {% endfor %}
                        </select>
                    </div>
                </div>
            </div>

            <div class="panel-footer">
                <div class="form-actions">
                    <div>
                        <button type="button" 
                                id="matrix-add" 
                                class="btn btn-primary btn-lg btn-block">
                            Add Matrix 
                            (<span id="tests-cases-left">{{testCases}}</span> left)
                        </button>
                    </div>
                </div>                        
            </div>
        </div>
    </div>
                            
    <div class="col-sm-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Matrix</h3>
            </div>

            <div class="panel-body">
                
                <ul class="list-group">
                    <li class="list-group-item">Cras justo odio</li>
                    <li class="list-group-item">Dapibus ac facilisis in</li>
                    <li class="list-group-item">Morbi leo risus</li>
                    <li class="list-group-item">Porta ac consectetur ac</li>
                    <li class="list-group-item">Vestibulum at eros</li>
                </ul>
                
            </div>
            
            <div class="panel-footer">
                <div>
                    <button type="button" class="btn btn-primary btn-lg btn-block">Next step</button>
                </div>
            </div>
        </div>
    </div>                        
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    
    <script type="text/javascript">
    $( "#matrix-add" ).on( "click", function( event ) {
        // Get Matrix size value
        alert($("#matrix-size").val());
        
        alert($("#tests-cases-left").html());
    });
    </script>
{% endblock %}