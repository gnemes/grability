{% extends 'layout.html.twig' %}

{% block content %}
<!-- Alert message -->    
<div class="row">
    <div class="col-sm-12">
        <div id="message" 
             class="alert alert-danger" 
             role="alert">
        </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Step 4 - Operations</h3>
            </div>
            <div class="panel-body">
                <div class="control-group">
                    <div class="controls" id="matrix-container">
                        <h5 id="matrix-operations-label">
                            <!-- This will be filled with JS -->
                        </h5>
                        <textarea id="matrix-operations" 
                                  class="form-control"
                                  placeholder="Paste your operations here"></textarea>
                    </div>
                </div>
            </div>

            <div class="panel-footer">
                <div class="form-actions">
                    <div>
                        <button type="button" 
                                id="matrix-add" 
                                class="btn btn-primary btn-lg btn-block">
                            <!-- Label will be put here with JS --> 
                        </button>
                        <span id="processing" class="glyphicon glyphicon-cog" aria-hidden="true"> Processing</span>
                    </div>
                </div>                        
            </div>
        </div>
    </div>
                            
    <div class="col-sm-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Matrix and operations</h3>
            </div>

            <div class="panel-body">
                
                <ul class="list-group" id="matrix-list">
                </ul>
                
            </div>
            
            <div class="panel-footer">
                <div>
                    <button type="button" id="next-step" class="btn btn-primary btn-lg btn-block">Next step</button>
                </div>
            </div>
        </div>
    </div>                        
</div>
                            
<form action="{{ path('step5') }}" method="post" id="form-step">
</form>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    
    <script type="text/javascript">
        $(function() {
            var tc = new TestCases();
            tc.init("{{testCases | raw}}");
            
            var validateOperationsUrl = "{{ path('validateOperations') }}";
            
            initStep4(tc, validateOperationsUrl);
        });
    </script>
    
    <script src="{{ asset('js/step4.js') }}"></script>
{% endblock %}